{
    "compilerOptions": {
        "target": "es6", // Compile into ES5
        "moduleResolution": "node", // NodeJS require format for importing/exporting modules
        "sourceMap": true, // Useful for debugging
        "removeComments": false, // For debugging (in production mode they’ll be removed anyway)
        "alwaysStrict": true // JavaScript code will have the “use strict” instruction (strict mode).
    }
}